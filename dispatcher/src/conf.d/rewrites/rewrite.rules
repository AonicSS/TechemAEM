#
# This file contains the rewrite rules, and can be customized.
#
# By default, it includes just the rewrite rules. You can
# add rewrite rules to this file but you should still include
# the default rewrite rules.

Include conf.d/rewrites/default_rewrite.rules

RewriteCond %{HTTPS_HOST} !pre-live\.techem\.de [NC]
RewriteCond %{HTTPS_HOST} !^$
RewriteRule ^/?(.*) https://pre-live.techem.de/$1 [L,R=301,NE,QSA]

RewriteCond %{HTTPS_HOST} techem\.de$ [NC]
RewriteRule ^/?(.*) https://www.techem.de/de/de.html [L,R=301,NE,QSA]
RewriteCond %{HTTPS_HOST} www\.techem\.de$ [NC]
RewriteRule ^/?(.*) https://www.techem.de/de/de.html [L,R=301,NE,QSA]
RewriteCond %{HTTPS_HOST} techem\.com$ [NC]
RewriteRule ^/?(.*) https://www.techem.com/corp/en.html [L,R=301,NE,QSA]
RewriteCond %{HTTPS_HOST} www\.techem\.com$ [NC]
RewriteRule ^/?(.*) https://www.techem.com/corp/en.html [L,R=301,NE,QSA]
RewriteCond %{HTTPS_HOST} !www\.techem\.com [NC]
RewriteCond %{HTTPS_HOST} !^$
RewriteRule ^/?(.*) https://www.techem.de/$1 [L,R=301,NE,QSA]

# rewrite for root redirect
RewriteRule ^/?$ /content/${CONTENT_FOLDER_NAME}/de/de.html [PT,L]
# RewriteRule ^/(.*)$ /content/techem/$1 [PT,L]
RewriteRule ^/content/techem/(.*).html$ $1.html [R,L]

RewriteCond %{REQUEST_URI} !^/apps
RewriteCond %{REQUEST_URI} !^/bin
RewriteCond %{REQUEST_URI} !^/content
RewriteCond %{REQUEST_URI} !^/etc
RewriteCond %{REQUEST_URI} !^/home
RewriteCond %{REQUEST_URI} !^/libs
RewriteCond %{REQUEST_URI} !^/saml_login
RewriteCond %{REQUEST_URI} !^/system
RewriteCond %{REQUEST_URI} !^/tmp
RewriteCond %{REQUEST_URI} !^/var
RewriteCond %{REQUEST_URI} (.html|.jpe?g|.png|.svg)$
RewriteRule ^/(.*)$ /content/${CONTENT_FOLDER_NAME}/$1 [PT,L]
